/* pages/detail/detail.wxss */

/* 封面区域 */
.cover-section {
  position: relative;
  width: 100%;
  height: 500rpx;
  overflow: hidden;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.play-btn {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 120rpx;
  height: 120rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 48rpx;
}

/* 内容区域 */
.content-section {
  margin: 20rpx;
}

.tags {
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #000;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

/* 统计网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-top: 24rpx;
}

.stat-card {
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 24rpx;
  text-align: center;
}

.stat-card.highlight {
  background: linear-gradient(135deg, #fff5f5, #ffe8e8);
}

.stat-card .stat-value {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #000;
  margin-bottom: 8rpx;
}

.stat-card.highlight .stat-value {
  color: #ff4757;
}

.stat-card .stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 商品区域 */
.product-section {
  margin: 0 20rpx 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #000;
  margin-bottom: 20rpx;
}

.product-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.product-main {
  display: flex;
  flex-direction: column;
}

.product-price {
  font-size: 48rpx;
  font-weight: 600;
  color: #ff4757;
}

.product-shop {
  font-size: 26rpx;
  color: #666;
  margin-top: 8rpx;
}

.product-stats {
  text-align: right;
  font-size: 24rpx;
  color: #999;
}

.product-stats .growth {
  display: block;
  color: #ff4757;
  margin-top: 8rpx;
}

.btn-view-product {
  width: 100%;
  background: #000;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
}

.btn-view-product:active {
  opacity: 0.8;
}

/* 市场分析 */
.analysis-section {
  margin: 0 20rpx 20rpx;
}

.analysis-content {
  margin-top: 20rpx;
}

.analysis-item {
  margin-bottom: 24rpx;
}

.analysis-item:last-child {
  margin-bottom: 0;
}

.analysis-label {
  display: block;
  font-size: 26rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.analysis-bar {
  height: 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #000, #333);
  border-radius: 8rpx;
  transition: width 0.3s;
}

.analysis-value {
  font-size: 24rpx;
  color: #999;
}

/* 操作按钮 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 16rpx;
  padding: 16rpx 20rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
}

.action-btn {
  flex: 1;
  height: 88rpx;
  background: #f5f5f5;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn:active {
  opacity: 0.8;
}

.action-btn.primary {
  background: #000;
  color: #fff;
}
