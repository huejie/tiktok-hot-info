/* pages/region/region.wxss */

.header {
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #000;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.region-list {
  padding: 0 20rpx;
}

.region-item {
  margin-bottom: 20rpx;
  transition: all 0.3s;
}

.region-item.active {
  background: linear-gradient(135deg, #000, #1a1a1a);
  color: #fff;
}

.region-header {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.flag {
  font-size: 64rpx;
  margin-right: 24rpx;
}

.region-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.name-en {
  font-size: 24rpx;
  color: #999;
}

.region-item.active .name-en {
  color: rgba(255, 255, 255, 0.6);
}

.check {
  font-size: 48rpx;
  color: #000;
}

.region-item.active .check {
  color: #fff;
}

.region-stats {
  display: flex;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.region-item.active .region-stats {
  border-top-color: rgba(255, 255, 255, 0.1);
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-value {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.region-item.active .stat-label {
  color: rgba(255, 255, 255, 0.6);
}

.tips {
  padding: 40rpx;
  text-align: center;
  font-size: 26rpx;
  color: #999;
}
