/* 全局样式 - 应用设计系统配色 */
page {
  /* 设计系统背景色 */
  background-color: #F8FAFC;
  /* 设计系统文字颜色 */
  color: #020617;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  line-height: 1.6;
}

/* 设计系统颜色变量 */
page {
  --color-primary: #0F172A;
  --color-secondary: #334155;
  --color-cta: #0369A1;
  --color-background: #F8FAFC;
  --color-text: #020617;
  --color-text-muted: #475569;
  --color-border: #e2e8f0;
  --color-success: #52c41a;
  --color-warning: #fa8c16;
  --color-danger: #ef4444;

  /* 海报页面专用变量 */
  --bg-primary: #ffffff;
  --bg-secondary: #F8FAFC;
  --bg-tertiary: #f1f5f9;
  --text-primary: #020617;
  --text-secondary: #475569;
  --text-tertiary: #94a3b8;
}

/* 容器 */
.container {
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 卡片样式 - 应用设计系统 */
.card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.06);
  border: 1rpx solid #e2e8f0;
  transition: all 0.2s ease;
}

.card:active {
  transform: scale(0.99);
  box-shadow: 0 1rpx 4rpx rgba(15, 23, 42, 0.08);
}

/* 标题 */
.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #000;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 按钮样式 - 应用设计系统 CTA 颜色 */
.btn {
  background: var(--color-cta);
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.2s ease;
  /* 触摸目标最小 44x44px */
  min-height: 88rpx;
  min-width: 88rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.btn:active {
  opacity: 0.85;
  transform: scale(0.98);
}

.btn-outline {
  background: transparent;
  border: 2rpx solid var(--color-primary);
  color: var(--color-primary);
  transition: all 0.2s ease;
}

.btn-outline:active {
  background: var(--color-background);
}

/* 标签 - 应用设计系统颜色 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  background: #F1F5F9;
  border-radius: 6rpx;
  font-size: 24rpx;
  color: var(--color-secondary);
  margin-right: 12rpx;
  transition: all 0.15s ease;
}

.tag.primary {
  background: var(--color-cta);
  color: #fff;
}

.tag.hot {
  background: linear-gradient(135deg, #ef4444, #f87171);
  color: #fff;
}

.tag.success {
  background: #dcfce7;
  color: #16a34a;
  border: 1rpx solid #86efac;
}

/* 数据展示 */
.stats {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}

.stats-item {
  margin-right: 32rpx;
}

.stats-value {
  font-size: 28rpx;
  color: #000;
  font-weight: 600;
}

/* 图片 */
.image {
  width: 100%;
  border-radius: 12rpx;
}

/* 加载中 */
.loading {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 120rpx 0;
  color: #999;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background: #eee;
  margin: 24rpx 0;
}
