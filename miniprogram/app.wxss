/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

/* 容器 */
.container {
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 标题 */
.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #000;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 按钮样式 */
.btn {
  background: #000;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.btn:active {
  opacity: 0.8;
}

.btn-outline {
  background: transparent;
  border: 2rpx solid #000;
  color: #000;
}

/* 标签 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  font-size: 24rpx;
  color: #666;
  margin-right: 12rpx;
}

.tag.primary {
  background: #000;
  color: #fff;
}

.tag.hot {
  background: #ff4757;
  color: #fff;
}

/* 数据展示 */
.stats {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}

.stats-item {
  margin-right: 32rpx;
}

.stats-value {
  font-size: 28rpx;
  color: #000;
  font-weight: 600;
}

/* 图片 */
.image {
  width: 100%;
  border-radius: 12rpx;
}

/* 加载中 */
.loading {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 120rpx 0;
  color: #999;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background: #eee;
  margin: 24rpx 0;
}
