/* 骨架屏加载样式 */
.skeleton {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
  border-radius: 4rpx;
}

@keyframes shimmer {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* 骨架屏卡片 */
.skeleton-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin: 16rpx;
  border: 1rpx solid #e2e8f0;
}

/* 骨架屏标题 */
.skeleton-title {
  height: 36rpx;
  width: 60%;
  margin-bottom: 20rpx;
}

/* 骨架屏文本 */
.skeleton-text {
  height: 28rpx;
  width: 100%;
  margin-bottom: 12rpx;
}

.skeleton-text.short {
  width: 40%;
}

/* 骨架屏头像 */
.skeleton-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

/* 骨架屏图片 */
.skeleton-image {
  width: 100%;
  height: 200rpx;
  border-radius: 8rpx;
}

/* 骨架屏工厂项 */
.skeleton-factory-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin: 16rpx;
  border: 1rpx solid #e2e8f0;
}

.skeleton-factory-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.skeleton-factory-name {
  height: 36rpx;
  width: 200rpx;
  margin-bottom: 12rpx;
}

.skeleton-factory-tags {
  display: flex;
  gap: 12rpx;
}

.skeleton-tag {
  height: 40rpx;
  width: 80rpx;
  border-radius: 6rpx;
}

.skeleton-factory-score {
  width: 120rpx;
}

.skeleton-video-cover {
  height: 300rpx;
  width: 100%;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.skeleton-stats-row {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.skeleton-stat {
  text-align: center;
}

.skeleton-stat-value {
  height: 32rpx;
  width: 60rpx;
  margin: 0 auto 8rpx;
}

.skeleton-stat-label {
  height: 24rpx;
  width: 40rpx;
  margin: 0 auto;
}

/* 骨架屏行业选择 */
.skeleton-industry-scroll {
  display: flex;
  gap: 16rpx;
  padding: 20rpx;
  overflow: hidden;
}

.skeleton-industry-item {
  min-width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
}
